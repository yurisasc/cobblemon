{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:evo_sparkleburst",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/glowing_sparkle_yellow"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "35 * math.clamp(q.entity_size,1,2)"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": "0.5 * math.clamp(q.entity_size,1,2)"
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.clamp(q.entity_size,1,2)/2",
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.5,1)*1.75"
			},
			"minecraft:particle_initial_speed": 18,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["v.particle_random_1*12 - 6", "v.particle_random_2*12 - 6", "v.particle_random_3*12 - 6"],
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.125 * math.clamp(q.entity_size,1,2) + 0.1", "0.125 * math.clamp(q.entity_size,1,2) + 0.1"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 32,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 8],
						"step_UV": [0, 8],
						"frames_per_second": 30,
						"max_frame": 4,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 5,
				"collision_radius": 0.05
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.22": "#FF2EFFF4",
						"0.56": "#FF6C90FF",
						"0.77": "#FFF5A9FF",
						"1.0": "#FF86FBFF"
					}
				}
			}
		}
	}
}