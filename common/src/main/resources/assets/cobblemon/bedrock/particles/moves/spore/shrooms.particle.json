{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:shrooms",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/mushroomize"
			}
		},
		"events": {
			"event_sound": {
				"sound_effect": {
					"event_name": "cobblemon:powder.spore.mushroom"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "math.random_integer(2,4)",
				"max_particles": 3
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_lifetime_events": {
				"timeline": {
					"0.05": "event_sound",
					"0.15": "event_sound",
					"0.35": "event_sound",
					"0.55": "event_sound"
				}
			},
			"minecraft:emitter_shape_disc": {
				"offset": ["math.sin(v.emitter_age/v.emitter_lifetime*90*9+v.emitter_random_1*360)", "0.5-(v.particle_random_2/8)-0.1", "math.cos(v.emitter_age/v.emitter_lifetime*90*9+v.emitter_random_1*360)"],
				"radius": "q.entity_radius",
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1.5
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5-(v.particle_random_2/8)", "0.5-(v.particle_random_2/8)"],
				"facing_camera_mode": "rotate_y",
				"uv": {
					"texture_width": 192,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 8,
						"max_frame": 12
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.9": "#ffffffff",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}