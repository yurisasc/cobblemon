{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:evo_flyingsparkles",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/glowing_sparkle_yellow"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "10 * (math.clamp(q.entity_size,1,2)/2) + 5",
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 4
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.clamp(q.entity_size,1,2)",
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random_integer(1,4)*90"
			},
			"minecraft:particle_initial_speed": "math.random(4,6) * math.clamp(q.entity_size,1,2)",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 2
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.2 * math.clamp(q.entity_size,1,2)", "0.2 * math.clamp(q.entity_size,1,2)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 32,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 8],
						"step_UV": [0, 8],
						"frames_per_second": 24,
						"max_frame": 4,
						"loop": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 1,
				"coefficient_of_restitution": 1
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.22": "#FF2EFFF4",
						"0.51": "#FFEBFF41",
						"0.78": "#FFD743FF",
						"1.0": "#006E5CFF"
					}
				}
			}
		}
	}
}